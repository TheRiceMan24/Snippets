def login_user():  #### TEST WITH database against entered details 
	global user_LoggedIn ## variable needed to know who logged in ##
	if signinUsernameEntry.value == "" or signinPasswordEntry.value == "":
		info("Error", "Please fill in all feilds!")
	else:
		sqlselect = "SELECT * FROM CUSTOMER_DETAILS WHERE userName = '"+signinUsernameEntry.value+"'"
		rows = query_database(database_file, sqlselect)
		if len(rows) == 0: ### This checks that the user was found ###
				info("Error", "You must enter a valid Login")
		elif rows[0][2] != signinPasswordEntry.value: #Takes password from row of SQL
			info("Error", "You must enter a valid Login")
		else:
			info("Log in","Success")
			user_LoggedIn = rows[0][0] #Notes the signed in users ID
			signin.hide()
			addreview.show() #Displays to review menu
      
signin = Window(app, title="Feet R'Us Login!", height=130, width=300)
sign_in_box = Box(signin, layout="grid")
signinUsernameText = Text(sign_in_box, text="Username: ", grid=[0,1])
signinUsernameEntry = TextBox(sign_in_box, grid=[2,1], width=30)
signinPasswordText = Text(sign_in_box, text="Password: ", grid=[0,3])
signinPasswordEntry = TextBox(sign_in_box, grid=[2,3], width=30)
signinBottomBar = Box(signin)
signinLogin = PushButton(signinBottomBar, text="Login!",  width=15, height=2, command=login_user, align = "right")
signupBackButton = PushButton(signinBottomBar, text="Back!",  width=15, height=2, command=back_to_home, align = "right")
signin.hide()
